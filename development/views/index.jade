doctype html
html.no-js(lang='en')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title GSA
		meta(name='description', content='')
		meta(name='keywords', content='')
		meta(name='author', content='GSA')
		//- link(rel='icon', href='assets/img/gsa.png')
		link(href='http://fonts.googleapis.com/css?family=Playfair+Display:900,400|Lato:300,400,700', rel='stylesheet', type='text/css')
		link(rel='stylesheet', type='text/css', href='assets/css/screen.css')
		script(src='assets/javascript/vendor/modernizr.custom.min.js')
	body
		.container
			
			include render/_header
			include render/_overlay

			#slideshow.dragslider
				
				section.img-dragger.img-dragger-large.dragdealer
					.handle
						.slide.slide-inicio( data-content="content-inicio" )
							img.logo(src="assets/img/gsa.svg", alt="GSA")
							.img-wrap
								img( src="assets/img/inicio.jpg" alt="img1" )
							h2
								br
								span Lorem ipsum Dolor
							button.content-switch Ver más
						.slide( data-content="content-productos" )
							.img-wrap
								img( src="assets/img/productos.jpg" alt="img1" )
							h2
								| Productos
								span Distribuidor autorizado
							button.content-switch Ver más
						.slide( data-content="content-servicios" )
							.img-wrap
								img( src="assets/img/servicios.jpg" alt="img1" )
							h2
								| Servicios
								span Diseño, Automatización, Redes, DTIC, Documentación
							button.content-switch Ver más
						.slide( data-content="content-contacto" )
							.img-wrap
								img( src="assets/img/contacto.jpg" alt="img1" )
							h2
								| Contacto
								span Conoce a uno de nuestros representantes
							button.content-switch Ver más

				section.pages
					.content( data-content="content-inicio" )
						include render/_content-inicio
					.content( data-content="content-productos" )
						include render/_content-productos
					.content( data-content="content-servicios" )
						include render/_content-servicios
					.content( data-content="content-contacto" )
						include render/_content-contacto

		script(src="http://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
		script(src="assets/javascript/main.min.js")

